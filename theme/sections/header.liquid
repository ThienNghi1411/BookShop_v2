{% assign _layout = section.settings.layout %}
{% assign _header_style = section.settings.header_style %}
{% assign _lazyload = settings.use_lazyload %}
{% assign _color_mobile = settings.header_bg_color_mobile %}
{% assign _sticky = section.settings.show_sticky_bar %}
{% assign _sticky_mobile = section.settings.mobile_show_sticky_bar %}

{% assign _show_phone_number = section.settings.show_phone_number %}
{% assign _phone_number = section.settings.phone_number %}
{% assign _show_email = section.settings.show_email %}
{% assign _email = section.settings.email %}
{% assign _short_menu = section.settings.short_menu %}

{%- assign _nav_alignment = section.settings.nav_alignment -%}

{% assign _opacity        = section.settings.opacity | times: 0.01 %}
{% if _opacity < 1 %}
   {% assign _color = settings.header_bg_color | color_modify: 'alpha',  _opacity %}
{% else %}
   {% assign _color = settings.header_bg_color | color_to_rgb  %}
{% endif %}

<link rel="stylesheet" href="{{ 'header.min.css' | asset_url }}">
<link rel="stylesheet" href="{{ 'snippet-cart-dropdown.min.css' | asset_url }}">
<link rel="stylesheet" href="{{ 'snippet-navigation-mobile.min.css' | asset_url }}">
<header class="header-content">
  <div id="header-style" class="header-container style-{{ _header_style }}" data-style="{{_header_style}}" data-section-type="header" data-section-id="{{section.id}}">


      <div class="header-desktop d-none d-lg-block" data-sticky="{{ _sticky }}">
   
        {% case _header_style %}
          {% when 1 %}
            {% render 'header-style-1', section: section , block: block , _lazyload: _lazyload , _layout: _layout , _show_phone_number: _show_phone_number , _phone_number: _phone_number , _show_email: _show_email , _email: _email, _short_menu: _short_menu, _nav_alignment: _nav_alignment %}
          {% when 2 %}
            {% render 'header-style-2', section: section , block: block , _lazyload: _lazyload , _layout: _layout , _show_phone_number: _show_phone_number , _phone_number: _phone_number , _show_email: _show_email , _email: _email, _short_menu: _short_menu, _nav_alignment: _nav_alignment %}
          {% when 3 %}
            {% render 'header-style-3', section: section , block: block , _lazyload: _lazyload , _layout: _layout , _show_phone_number: _show_phone_number , _phone_number: _phone_number , _show_email: _show_email , _email: _email, _short_menu: _short_menu, _nav_alignment: _nav_alignment %}
        {% endcase %}
      </div>

      <div class="header-mobile d-lg-none" data-color="{{ _color_mobile }}" data-sticky="{{ _sticky_mobile }}">
         {% render 'header-mobile' , _lazyload: _lazyload %}
      </div>
  </div>

  <div class="header-navigation-mobile">
    {% render 'navigation-mobile' , section: section , block: block , _lazyload: _lazyload %}
  </div>
</header>

<style>
/*Mobile*/
@media (max-width: 991px) {
  #header-style, .mobile-layout-bar, .header-mobile.header-fixed{
    background: {{ _color_mobile }};
  }
}
/*Desktop*/
@media (min-width: 992px) {
   {% if _header_style == 2 %}
   .templateIndex .header-content .style-2 .header-main>.table-row {
      background: {{ _color }};
   }
   {% endif %}
}

</style>

