{% endcomment %}
<div class="cf-color hide">
	{% comment %}{% assign ar_color = settings.color_config | downcase | split: ',' %}
	<style>
	{% for i_color in ar_color  %}{% assign temp = i_color | strip_newlines %}
	.cf-{{temp | split: ':' | first }}{background: {{temp | split: ':' | last }};}
	label.cf-{{temp | split: ':' | first }}:before{
	    content:'';
	    background: {{temp | split: ':' | last }};
	}
	{% endfor %}
	</style>{% endcomment %}

	{% assign ar_color = settings.color_config | downcase | split: ',' %}
	{% assign color_setting = '' %}
	{% for i_color in ar_color  %}
		{% assign temp 	 = i_color | strip_newlines %}
		{% assign _color = temp | split: ':' | first %}
		{% capture temp_color %}label.cf-{{_color}},.cf-{{_color}}{background-color: {{temp | split: ':' | last }};}{% endcapture %}
		{% assign color_setting = color_setting | strip | append: temp_color %}
	{% endfor %}
	<style>{{color_setting}}</style>
</div>