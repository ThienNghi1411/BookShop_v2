        }
        .countdown-period {
          background: rgba($main-color, 0.8);
          padding: 8px 5px;
          @include border-radius(0, 0, 5px, 5px);
        }
      }
      .countdown-amount {
        position: relative;   
        font-weight: 700;  
        display: block;
        font-size: $size-h3;
        background: $main-color;
        padding: 8px 5px;
        @include border-radius(5px, 5px, 0, 0);
        @media (max-width: 767px) {
          font-size: $size-h3 - 4px;
        }
      }
    }
  }
